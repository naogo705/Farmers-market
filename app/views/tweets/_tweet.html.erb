      <div class="cols">
        <div class="col" ontouchstart="this.classList.toggle('hover');">
          <div class="content-post" style="background-image: url(<%= tweet.image %>);">
            <div class="front">
              <div class="inner">
                <div class="inner-main">
                  <a href="/users/<%= tweet.user.id %>" class="inner-userName">
                  <%= tweet.user.nickname %>
                  </a>
                  <p class="inner-postDate"><%= tweet.updated_at.strftime('%y年%m月%d日') %></p>
                </div>
              </div>
            </div>
            <div class="back">
              <div class="inner">
                <div class="inner-hoverBox">
                  <p class="inner-txt"><%= tweet.text %></p>
                  <div class="showBtn">
                    <%= link_to '詳しく見る', tweet_path(tweet.id), method: :get %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
